{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "build-server",
        "rootDir": ".",
        "resolveJsonModule": true
    },
    "include": ["server/**/*"]
}
